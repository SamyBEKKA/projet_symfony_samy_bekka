{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block header %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{{ include('nav.html.twig') }}
{% endblock %}
{% block contenent %}


<div class="example-wrapper">
    <h1>{{ controller_name }}</h1>

    <button><a href>/article/{id}</a>
    </button>

    {% for article in blog %}
    <section class="">
    <div class="container">
        <div class="row border text-center">
            <h2>{{article.nameArticle}}</h2>
            {% if article.image is not null %}
            <p>
            <img src="{{ ('uploads/article/' ~ article.image)}}" alt = "logo"></img>
            </p>
            {% endif %}
            
            <div class="col-lg-6">
                <div class=" mb-4">
                    <p>{{ article.dateArticle|date('d/m/Y')}}</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class=" mb-4">
                    <p>{{article.shortDescriptionArticle}}</p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="mb-4">
                    {# <p>{{article.textArticle}}</p> #}
                    {# <p> {{article.categories}}</p> #}
                </div>
            </div>
            <a class="btn btn-primary" href="{{path("article_item", {id: article.id})}}">
            Lire...
            </a>
        </div>
    </div>
</section>
<br>
    {% endfor %}
</div>
{% endblock %}
